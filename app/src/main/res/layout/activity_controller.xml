<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TouchPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#3F51B5"
    tools:context="com.remoteclient.nikil.remoteclient.Controller"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/keyboardbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="keyClickHandler"
                android:text="KeyBoard"></Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/LeftClickButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="LeftButtonClickHandler"
                android:text="Left Click"></Button>

            <Button
                android:id="@+id/RightClickButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="RightButtonClickHandler"
                android:text="Right Click"></Button>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/KeyBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:focusable="true"
        android:inputType="textVisiblePassword"
        android:text="  K  "></EditText>

</LinearLayout>
